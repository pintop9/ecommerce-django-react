pipeline {
    agent any
    // @Library('shared-library') _

    environment {
        GIT_REPO_URL = 'https://github.com/pintop9/ecommerce-django-react.git'
        GIT_BRANCH = 'main' // Change this if you're using a different branch
    }

    stages {
        stage('Pull from GitHub') {
            steps {
                script {
                    try {
                        git branch: GIT_BRANCH, url: GIT_REPO_URL
                    } catch (Exception e) {
                        echo "Failed to pull from GitHub: ${e.message}"
                        error "Stopping the build."
                    }
                }
            }
        }

stage('Build') {
            steps {
                // Build project on Jenkins server.
                script {
                    // Activate virtual environment and run commands
                    sh '''
                    cd backend
                    python3 -m venv env
                    . env/bin/activate
                    pip install -r ../requirements.txt
                    python ../manage.py runserver localhost:7000 &
                '''
                }
            }
        }

        // stage('Running Tests') {
